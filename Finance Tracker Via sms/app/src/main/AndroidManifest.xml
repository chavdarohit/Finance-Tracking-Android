<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.finance">

    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.Finance">
        <activity
            android:name=".activity_liquidswipe"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity_permission"
            android:exported="false" />
        <activity
            android:name=".activity_about"
            android:exported="false" />
        <activity
            android:name=".activity_updateprofile"
            android:exported="false" />
        <activity
            android:name=".activity_rateus"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar" />
        <activity
            android:name=".activity_addtask"
            android:exported="false" />
        <activity
            android:name=".activity_firstregister"
            android:exported="false" />
        <activity
            android:name=".activity_pwreset"
            android:exported="false" />
        <activity
            android:name=".activity_splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity_registration"
            android:exported="false" />
        <activity
            android:name=".activity_login"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <receiver android:name=".AlarmBroadcastReceiver"/>
    </application>

</manifest>